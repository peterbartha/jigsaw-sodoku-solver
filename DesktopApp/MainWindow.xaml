<Window x:Class="DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="640" Width="570" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="#FF3E606F">
    <Canvas Height="625" Margin="15,15,15,0" VerticalAlignment="Top">
        <Canvas Height="50" Width="540">
            <Label Content="Jigsaw Sodoku Solver" Canvas.Top="5" FontSize="22" Background="Transparent" Foreground="#FFFCFFF5"/>
        </Canvas>
        <Grid Height="540" Canvas.Top="50" Width="540">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Open" HorizontalAlignment="Left" Margin="45,-30,-61,0" VerticalAlignment="Top" Width="76" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click" Foreground="#FFFCFFF5" Height="18" Grid.Column="8"/>
        </Grid>
    </Canvas>
</Window>
